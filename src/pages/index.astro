---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
const base = import.meta.env.BASE_URL;
---
<BaseLayout>
  <Navbar />
  <main style="text-align: center; padding: 4rem 2rem;">
    <img src={`${base}/assets/logo.png`}  alt="Obsidian Empire Logo" style="width: 20%; height: auto; margin-bottom: 1rem;" />
    <h1 style="font-size: 3rem; color: #ff3c00;">Obsidian Empire</h1>
  
  <div style="margin-top: 2rem;">
    <a href="https://discord.gg/8BAYZnChZ3" target="_blank" style="display: inline-block; padding: 0.75rem 1.5rem; background-color: #222; color: #ff3c00; border: 1px solid #ff3c00; border-radius: 8px; text-decoration: none; font-weight: bold; transition: all 0.3s ease;">
      Join Our Discord
    </a>
  </div>
  </main>
</BaseLayout>